@model AppleReceiptVerifier.Web.Models.ReceiptTestViewModel
<html>
    <head>
        <link href="~/Content/Prettify/prettify.css" rel="stylesheet" />
        <script src="~/Scripts/Prettify/run_prettify.js"></script>
        <script src="~/Scripts/jquery-2.0.2.js"></script>
    </head>
    <body>
        <h2>Receipt Tester</h2>

        @using (Html.BeginForm())
        {
            @Html.LabelFor(x => x.Environment) <br />
            @Html.DropDownListFor(x => x.Environment, Model.Environments) <br />
            <br />
            @Html.LabelFor(x => x.UseAsync) <br />
            @Html.CheckBoxFor(x => x.UseAsync) <br />
            <br />
            @Html.LabelFor(x => x.ReceiptData)<br />
            @Html.TextAreaFor(x => x.ReceiptData, 10, 60, null)<br />
            <br/>
            @Html.LabelFor(x => x.Password)<br/>
            @Html.TextBoxFor(x => x.Password)<br/>
            <br/>
            <input type="submit" value="Submit" />
        }
        @if (Model.ReceiptResponse != null)
        {
            <table>
                <tr>
                    <td>Status:</td>
                    <td>@Model.ReceiptResponse.Status</td>
                </tr>
                <tr>
                    <td>Status Description:</td>
                    <td>@Model.ReceiptResponse.StatusDescription</td>
                </tr>
                @if (Model.ReceiptResponse.Receipt != null)
                {
                    <tr>
                        <td>
                            Receipt:
                        </td>
                        <td>
                            <table>
                                <tr>
                                    <td>AppItemId</td>
                                    <td>@Model.ReceiptResponse.Receipt.AppItemId</td>
                                </tr>
                                <tr>
                                    <td>ApplicationVersionNumber</td>
                                    <td>@Model.ReceiptResponse.Receipt.ApplicationVersionNumber</td>
                                </tr>
                                <tr>
                                    <td>BundleIdentifier</td>
                                    <td>@Model.ReceiptResponse.Receipt.BundleIdentifier</td>
                                </tr>
                                <tr>
                                    <td>ItemId</td>
                                    <td>@Model.ReceiptResponse.Receipt.ItemId</td>
                                </tr>
                                <tr>
                                    <td>OriginalPurchaseDateMilliseconds</td>
                                    <td>@Model.ReceiptResponse.Receipt.OriginalPurchaseDateMilliseconds</td>
                                </tr>
                                <tr>
                                    <td>OriginalPurchaseDatePst</td>
                                    <td>@Model.ReceiptResponse.Receipt.OriginalPurchaseDatePst</td>
                                </tr>
                                <tr>
                                    <td>OriginalPurchaseDateUtc</td>
                                    <td>@Model.ReceiptResponse.Receipt.OriginalPurchaseDateUtc</td>
                                </tr>
                                <tr>
                                    <td>OriginalTransactionId</td>
                                    <td>@Model.ReceiptResponse.Receipt.OriginalTransactionId</td>
                                </tr>
                                <tr>
                                    <td>ProductId</td>
                                    <td>@Model.ReceiptResponse.Receipt.ProductId</td>
                                </tr>
                                <tr>
                                    <td>PurchaseDateMilliseconds</td>
                                    <td>@Model.ReceiptResponse.Receipt.PurchaseDateMilliseconds</td>
                                </tr>
                                <tr>
                                    <td>PurchaseDatePst</td>
                                    <td>@Model.ReceiptResponse.Receipt.PurchaseDatePst</td>
                                </tr>
                                <tr>
                                    <td>PurchaseDateUtc</td>
                                    <td>@Model.ReceiptResponse.Receipt.PurchaseDateUtc</td>
                                </tr>
                                <tr>
                                    <td>Quantity</td>
                                    <td>@Model.ReceiptResponse.Receipt.Quantity</td>
                                </tr>
                                <tr>
                                    <td>TransactionId</td>
                                    <td>@Model.ReceiptResponse.Receipt.TransactionId</td>
                                </tr>
                                <tr>
                                    <td>UniqueIdentifier</td>
                                    <td>@Model.ReceiptResponse.Receipt.UniqueIdentifier</td>
                                </tr>
                                <tr>
                                    <td>UniqueVendorIdentifier</td>
                                    <td>@Model.ReceiptResponse.Receipt.UniqueVendorIdentifier</td>
                                </tr>
                                <tr>
                                    <td>VersionExternalIdentifier</td>
                                    <td>@Model.ReceiptResponse.Receipt.VersionExternalIdentifier</td>
                                </tr>

                                <tr>
                                    <td>ExpiresDateMilliseconds</td>
                                    <td>@Model.ReceiptResponse.Receipt.ExpiresDateMilliseconds</td>
                                </tr>
                                <tr>
                                    <td>ExpiresDatePst</td>
                                    <td>@Model.ReceiptResponse.Receipt.ExpiresDatePst</td>
                                </tr>
                                <tr>
                                    <td>ExpiresDateUtc</td>
                                    <td>@Model.ReceiptResponse.Receipt.ExpiresDateUtc</td>
                                </tr>

                                <tr>
                                    <td>WebOrderLineItemId</td>
                                    <td>@Model.ReceiptResponse.Receipt.WebOrderLineItemId</td>
                                </tr>
                            </table>
                        </td>
                    </tr>  
                }
                @if (Model.ReceiptResponse.LatestExpiredReceiptInfo != null)
                {
                    <tr>
                        <td>Latest Expired Receipt Data</td>
                        <td>
                            <table>
                                <tr>
                                    <td>AppItemId</td>
                                    <td>@Model.ReceiptResponse.LatestExpiredReceiptInfo.AppItemId</td>
                                </tr>
                                <tr>
                                    <td>ApplicationVersionNumber</td>
                                    <td>@Model.ReceiptResponse.LatestExpiredReceiptInfo.ApplicationVersionNumber</td>
                                </tr>
                                <tr>
                                    <td>BundleIdentifier</td>
                                    <td>@Model.ReceiptResponse.LatestExpiredReceiptInfo.BundleIdentifier</td>
                                </tr>
                                <tr>
                                    <td>ItemId</td>
                                    <td>@Model.ReceiptResponse.LatestExpiredReceiptInfo.ItemId</td>
                                </tr>
                                <tr>
                                    <td>OriginalPurchaseDateMilliseconds</td>
                                    <td>@Model.ReceiptResponse.LatestExpiredReceiptInfo.OriginalPurchaseDateMilliseconds</td>
                                </tr>
                                <tr>
                                    <td>OriginalPurchaseDatePst</td>
                                    <td>@Model.ReceiptResponse.LatestExpiredReceiptInfo.OriginalPurchaseDatePst</td>
                                </tr>
                                <tr>
                                    <td>OriginalPurchaseDateUtc</td>
                                    <td>@Model.ReceiptResponse.LatestExpiredReceiptInfo.OriginalPurchaseDateUtc</td>
                                </tr>
                                <tr>
                                    <td>OriginalTransactionId</td>
                                    <td>@Model.ReceiptResponse.LatestExpiredReceiptInfo.OriginalTransactionId</td>
                                </tr>
                                <tr>
                                    <td>ProductId</td>
                                    <td>@Model.ReceiptResponse.LatestExpiredReceiptInfo.ProductId</td>
                                </tr>
                                <tr>
                                    <td>PurchaseDateMilliseconds</td>
                                    <td>@Model.ReceiptResponse.LatestExpiredReceiptInfo.PurchaseDateMilliseconds</td>
                                </tr>
                                <tr>
                                    <td>PurchaseDatePst</td>
                                    <td>@Model.ReceiptResponse.LatestExpiredReceiptInfo.PurchaseDatePst</td>
                                </tr>
                                <tr>
                                    <td>PurchaseDateUtc</td>
                                    <td>@Model.ReceiptResponse.LatestExpiredReceiptInfo.PurchaseDateUtc</td>
                                </tr>
                                <tr>
                                    <td>Quantity</td>
                                    <td>@Model.ReceiptResponse.LatestExpiredReceiptInfo.Quantity</td>
                                </tr>
                                <tr>
                                    <td>TransactionId</td>
                                    <td>@Model.ReceiptResponse.LatestExpiredReceiptInfo.TransactionId</td>
                                </tr>
                                <tr>
                                    <td>UniqueIdentifier</td>
                                    <td>@Model.ReceiptResponse.LatestExpiredReceiptInfo.UniqueIdentifier</td>
                                </tr>
                                <tr>
                                    <td>UniqueVendorIdentifier</td>
                                    <td>@Model.ReceiptResponse.LatestExpiredReceiptInfo.UniqueVendorIdentifier</td>
                                </tr>
                                <tr>
                                    <td>VersionExternalIdentifier</td>
                                    <td>@Model.ReceiptResponse.LatestExpiredReceiptInfo.VersionExternalIdentifier</td>
                                </tr>

                                <tr>
                                    <td>ExpiresDateMilliseconds</td>
                                    <td>@Model.ReceiptResponse.LatestExpiredReceiptInfo.ExpiresDateMilliseconds</td>
                                </tr>
                                <tr>
                                    <td>ExpiresDatePst</td>
                                    <td>@Model.ReceiptResponse.LatestExpiredReceiptInfo.ExpiresDatePst</td>
                                </tr>
                                <tr>
                                    <td>ExpiresDateUtc</td>
                                    <td>@Model.ReceiptResponse.LatestExpiredReceiptInfo.ExpiresDateUtc</td>
                                </tr>

                                <tr>
                                    <td>WebOrderLineItemId</td>
                                    <td>@Model.ReceiptResponse.LatestExpiredReceiptInfo.WebOrderLineItemId</td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                }

                <tr>
                    <td>
                        RawResponse:
                    </td>
                    <td>
                        <pre id="receiptResponse" class="prettyprint lang-javascript">
                        </pre>                    
                    </td>
                </tr>
            </table>  
        }    
        <style type="text/css">
            td
            {
            vertical-align:top;
            }
        </style>
        <script language="javascript">
            var response = @Html.Raw(Model.ReceiptResponse != null ? Model.ReceiptResponse.RawResponse : string.Empty)
            $("#receiptResponse").html(JSON.stringify(response, null, '\t'));
        </script>
    </body>
</html>

